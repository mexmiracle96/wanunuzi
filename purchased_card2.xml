<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="4dp"
    android:layout_marginBottom="4dp">
  <RelativeLayout
      android:id="@+id/relativeLayout"
      android:layout_width="match_parent"
      android:layout_height="110dp"
      android:background="?android:attr/selectableItemBackground"
       android:orientation="horizontal">
    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_margin="6dp"
        android:padding="5dp"
        android:layout_alignParentStart="true"
        android:scaleType="centerCrop"
        android:transitionName="imgTransition"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <RelativeLayout
        android:id="@+id/linearlayout1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="4dp"
        android:layout_toEndOf="@+id/imageView2"
        android:orientation="vertical">
      <TextView
          android:id="@+id/txtProduct"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_alignParentStart="true"
          android:layout_marginTop="6dp"
          android:fontFamily="sans-serif"
          android:padding="5dp"
          android:ellipsize="end"
          android:maxLines="2"
          android:text="SUMSUNG GALAYX 5 3MP Camera 3D"
          android:textSize="15sp" />
      <TextView
          android:id="@+id/txtPrice"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_below="@+id/txtProduct"
          android:layout_marginLeft="2dp"
          android:fontFamily="sans-serif"
          android:paddingLeft="5dp"
          android:textColor="#000"
          android:layout_marginTop="4dp"
          android:layout_alignParentStart="true"
          android:transitionName="priceTransition"
          android:text="TSh 200,000"
          android:textSize="15sp" />
      <TextView
          android:id="@+id/txtDate"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:fontFamily="sans-serif"
          android:layout_alignParentBottom="true"
          android:textColor="@color/colorAccent"
          android:layout_alignParentStart="true"
          android:text="Purchased 12/01/2019"
          android:layout_marginLeft="2dp"
          android:paddingLeft="5dp"
          android:layout_marginBottom="10dp"
          android:textSize="14sp" />
    </RelativeLayout>
  </RelativeLayout>
</LinearLayout>
