<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/parentlayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">
  <android.support.v4.widget.NestedScrollView
      android:id="@+id/scrollView"
      android:layout_width="match_parent"
      android:layout_height="match_parent">
    <TableLayout
        android:id="@+id/fragmentContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
      <RelativeLayout
          android:id="@+id/relative"
          android:layout_width="match_parent"
          android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/imageContainer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
          <android.support.v4.view.ViewPager
              android:background="@android:color/white"
              android:id="@+id/productSlider"
              android:layout_width="match_parent"
              android:scaleType="centerCrop"
              android:layout_height="350dp">
          </android.support.v4.view.ViewPager>
          <RelativeLayout
              android:id="@+id/linearlayout"
              android:layout_width="match_parent"
              android:layout_height="50dp"
              android:padding="16dp"
              android:background="#455">
            <TextView
                android:id="@+id/buy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:layout_marginTop="25dp"
                android:maxLines="1"
                android:textAllCaps="true"
                android:layout_marginRight="5dp"
                android:layout_centerVertical="true"
                android:textColor="@android:color/white"
                style="@style/TextAppearance.AppCompat.Title"
                android:text="@string/title_buy_now" />
            <TextView
                android:id="@+id/txtHeader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:layout_marginTop="25dp"
                android:maxLines="1"
                android:layout_toEndOf="@+id/buy"
                android:layout_toStartOf="@+id/btnMore"
                android:layout_centerVertical="true"
                android:textColor="@android:color/white"
                style="@style/TextAppearance.AppCompat.Title"
                android:text="Smart Watch For Android " />
            <ImageButton
                android:id="@+id/btnMore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:paddingLeft="10dp"
                android:background="@android:color/transparent"
                android:src="@drawable/ic_more_vert_white_24dp"/>
          </RelativeLayout>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/dotslayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:orientation="horizontal"
            android:layout_alignParentStart="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="300dp">
        </LinearLayout>
      </RelativeLayout>
      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/card_margin">
          <LinearLayout
              android:padding="10dp"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical"
              android:background="@android:color/white">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center">
              <TextView
                  android:id="@+id/txtOffHead"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="Tsh 12,000"
                  android:textSize="14sp"
                  android:layout_centerVertical="false"
                  android:visibility="visible"
                  android:layout_marginTop="7dp"
                  android:layout_marginRight="15dp"
                  android:layout_below="@+id/txtPriceHead"
                  android:fontFamily="sans-serif" />
              <TextView
                  android:id="@+id/txtOffPercent"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="Price Off -12%"
                  android:textSize="14sp"
                  android:textColor="@color/colorAccent"
                  android:layout_toEndOf="@+id/txtOffHead"
                  android:layout_marginTop="7dp"
                  android:layout_marginRight="15dp"
                  android:layout_below="@id/txtPriceHead"
                  android:fontFamily="sans-serif" />

              <TextView
                  android:id="@+id/txtPriceHead"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="Tsh 12,000"
                  android:textSize="24dp"
                  style="@style/TextAppearance.AppCompat.Title"
                  android:textColor="#000"
                  android:textStyle="bold"
                  android:fontFamily="sans-serif" />
            </RelativeLayout>
            <TextView
                android:id="@+id/txtDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                style="@style/Base.TextAppearance.AppCompat.Small"
                android:text="Sangsumg AT &amp; T Lite Sangsumg AT &amp; T Lite 4G With 10 GB Sangsumg AT &amp; T Lite 4G With 10 GB 4G With 10 GB Every mounth LTE Out Now" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:layout_marginTop="25dp"
                android:textAllCaps="true"
                android:textColor="@color/colorAccent"
                style="@style/TextAppearance.AppCompat.Title"
                android:text="@string/title_features_description" />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#d3d3d3"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"/>
            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:rowCount="4"
                android:padding="8dp"
                android:background="#9be6e6e6"
                android:columnCount="3"
                android:orientation="vertical">
              <TextView
                  android:layout_row="0"
                  android:layout_column="0"
                  android:layout_gravity="center_vertical"
                  android:text="@string/product"
                  android:layout_columnSpan="2"
                  style="@style/TextAppearance.AppCompat.SearchResult.Subtitle"/>
              <TextView
                  android:id="@+id/txtProduct"
                  android:text="Sangsumg AT &amp; T Lite 4G With 10 GB Every mounth LTE Out Now"
                  android:textSize="14dip"
                  android:layout_row="0"
                  android:layout_gravity="center_vertical"
                  android:layout_marginLeft="40dp"
                  android:layout_column="1"
                  android:layout_width="match_parent" />
              <Space
                  android:layout_row="0"
                  android:layout_column="0"
                  android:layout_width="50dp"
                  android:layout_height="42dp" />
            </GridLayout>
            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:rowCount="4"
                android:padding="8dp"
                android:columnCount="5"
                android:orientation="vertical">
              <TextView
                  android:layout_row="0"
                  android:layout_column="0"
                  android:text="@string/price"
                  android:layout_columnSpan="3"
                  android:layout_gravity="center_vertical"

                  style="@style/TextAppearance.AppCompat.SearchResult.Subtitle"/>
              <TextView
                  android:id="@+id/txtPrice"
                  android:text="Tsh 2,000,000"
                  android:textSize="14dip"
                  android:layout_row="0"
                  android:layout_gravity="center_vertical"

                  android:layout_marginLeft="40dp"
                  android:layout_column="2" />
              <TextView
                  android:id="@+id/txtOff"
                  android:text="Tsh 1,000,000"
                  android:textSize="14dip"
                  android:layout_row="0"
                  android:visibility="gone"
                  android:layout_gravity="center_vertical"
                  android:layout_marginLeft="10dp"
                  android:layout_column="4" />
              <Space
                  android:layout_row="0"
                  android:layout_column="0"
                  android:layout_width="50dp"
                  android:layout_height="42dp" />
            </GridLayout>
            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:rowCount="4"
                android:padding="8dp"
                android:background="#9be6e6e6"
                android:columnCount="4"
                android:orientation="vertical">
              <TextView
                  android:layout_row="0"
                  android:layout_column="0"
                  android:text="@string/tilte_sizes"
                  android:layout_columnSpan="3"
                  android:layout_gravity="center_vertical"

                  style="@style/TextAppearance.AppCompat.SearchResult.Subtitle"/>
              <TextView
                  android:id="@+id/txtSizes"
                  android:text="Tsh 2,000,000"
                  android:textSize="14dip"
                  android:layout_gravity="center_vertical"

                  android:layout_row="0"
                  android:layout_marginLeft="40dp"
                  android:layout_column="2" />
              <Space
                  android:layout_row="0"
                  android:layout_column="0"
                  android:layout_width="50dp"
                  android:layout_height="42dp"/>
            </GridLayout>
            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:rowCount="4"
                android:columnCount="4"
                android:padding="8dp"
                android:orientation="vertical">
              <TextView
                  android:layout_row="0"
                  android:layout_column="0"
                  android:text="@string/title_condition"
                  android:layout_columnSpan="3"
                  android:layout_gravity="center_vertical"
                  style="@style/TextAppearance.AppCompat.SearchResult.Subtitle"/>
              <TextView
                  android:id="@+id/txtCondition"
                  android:text="New Brand"
                  android:textSize="14dip"
                  android:layout_row="0"
                  android:layout_gravity="center_vertical"

                  android:layout_marginLeft="40dp"
                  android:layout_column="2" />
              <Space
                  android:layout_row="0"
                  android:layout_column="0"
                  android:layout_width="50dp"
                  android:layout_height="42dp"/>
            </GridLayout>
            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:rowCount="4"
                android:columnCount="4"
                android:orientation="vertical">
              <TextView
                  android:layout_row="0"
                  android:layout_column="0"
                  android:text="@string/menu_aboutus"
                  android:textColor="@color/colorAccent"
                  android:layout_columnSpan="3"
                  android:layout_marginTop="10dp"
                  android:layout_marginBottom="15dp"
                  android:textAllCaps="true"
                  android:textSize="17sp"
                  style="@style/TextAppearance.AppCompat.Title"
                  />
            </GridLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#d3d3d3"
                android:layout_marginBottom="15dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">
              <ImageView
                  android:id="@+id/imageView2"
                  android:layout_width="60dp"
                  android:layout_height="60dp"
                  android:layout_marginBottom="10dp"
                  android:scaleType="centerCrop"/>
            </LinearLayout>
            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:rowCount="4"
                android:columnCount="4"
                android:orientation="vertical">
              <TextView
                  android:layout_row="0"
                  android:layout_column="0"
                  android:text="@string/location"
                  android:layout_columnSpan="3"
                  style="@style/TextAppearance.AppCompat.SearchResult.Subtitle"/>
              <TextView
                  android:id="@+id/txtLocation"
                  android:text="Kariakoo, Dar es Salaam Tanzania"
                  android:textSize="14dip"
                  android:layout_row="0"
                  android:layout_marginLeft="40dp"
                  android:layout_column="2" />
              <Space
                  android:layout_row="0"
                  android:layout_column="0"
                  android:layout_width="50dp"
                  android:layout_height="42dp" />
            </GridLayout>
            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:rowCount="4"
                android:columnCount="5"
                android:orientation="vertical">
              <TextView
                  android:layout_row="0"
                  android:layout_column="0"
                  android:text="@string/title_mobile"
                  android:layout_columnSpan="3"
                  style="@style/TextAppearance.AppCompat.SearchResult.Subtitle"/>
              <TextView
                  android:id="@+id/txtContacts"
                  android:text="Tsh 2,000,000"
                  android:textSize="14dip"
                  android:layout_row="0"
                  android:layout_marginLeft="40dp"
                  android:layout_column="2" />
              <Space
                  android:layout_row="0"
                  android:layout_column="0"
                  android:layout_width="50dp"
                  android:layout_height="42dp" />
            </GridLayout>
            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:rowCount="4"
                android:columnCount="5"
                android:orientation="vertical">
              <TextView
                  android:layout_row="0"
                  android:layout_column="0"
                  android:text="@string/title_email"
                  android:layout_columnSpan="3"
                  style="@style/TextAppearance.AppCompat.SearchResult.Subtitle"/>
              <TextView
                  android:id="@+id/txtEmail"
                  android:text="Tsh 2,000,000"
                  android:textSize="14dip"
                  android:layout_row="0"
                  android:layout_marginLeft="40dp"
                  android:layout_column="2" />
              <Space
                  android:layout_row="0"
                  android:layout_column="0"
                  android:layout_width="50dp"
                  android:layout_height="42dp" />
            </GridLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
              <LinearLayout
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="vertical">
                <RelativeLayout
                    android:id="@+id/ln"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#F5F5F5">
                  <TextView
                      android:id="@+id/txtv"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:fontFamily="sans-serif"
                      android:textSize="17sp"
                      android:padding="3dp"
                      android:textColor="#000"
                      android:layout_alignParentStart="true"
                      android:text="@string/title_accepted_payment"/>
                </RelativeLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingBottom="10dp">
                  <LinearLayout
                      android:id="@+id/layout1"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_gravity="center"
                      android:layout_margin="10dp"
                      android:orientation="horizontal">
                    <Refractored.Controls.CircleImageView
                        android:id="@+id/mpesa"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:layout_gravity="center"
                        android:layout_margin="2dp"/>
                    <Refractored.Controls.CircleImageView
                        android:id="@+id/tigopesa"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:layout_gravity="center"
                        android:layout_margin="2dp" />
                    <Refractored.Controls.CircleImageView
                        android:id="@+id/halopesa"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:layout_gravity="center"
                        android:layout_margin="2dp"/>
                    <Refractored.Controls.CircleImageView
                        android:id="@+id/airtelmoney"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:layout_gravity="center"
                        android:layout_margin="2dp"/>
                    <Refractored.Controls.CircleImageView
                        android:id="@+id/zantel"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:layout_gravity="center"
                        android:layout_margin="2dp" />
                    <Refractored.Controls.CircleImageView
                        android:id="@+id/tpesa"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:layout_gravity="center"
                        android:layout_margin="2dp" />

                  </LinearLayout>
                </LinearLayout>
              </LinearLayout>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#d3d3d3"
                android:layout_marginBottom="15dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/title_review"
                style="@style/TextAppearance.AppCompat.Title" />
            <RelativeLayout
                android:id="@+id/relativeLayout"
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:focusable="true"
                android:background="?android:attr/selectableItemBackground">
              <ImageView
                  android:id="@+id/imageView"
                  android:layout_width="100dp"
                  android:layout_height="100dp"
                  android:layout_margin="7dp"
                  android:padding="5dp"
                  android:layout_alignParentStart="true"
                  android:scaleType="fitCenter"/>
              <RelativeLayout
                  android:id="@+id/linearlayout1"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:padding="4dp"
                  android:layout_toEndOf="@id/imageView"
                  android:layout_alignParentRight="true"
                  android:layout_centerVertical="true">
                <TextView
                    android:id="@+id/txtProduct2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:fontFamily="sans-serif"
                    android:padding="2dp"
                    android:maxLines="2"
                    android:text="SUMSUNG GALAYX 3MP  3D Get Em Now Offer Is Limited"
                    android:ellipsize="end"
                    android:textSize="15sp" />
                <TextView
                    android:id="@+id/textCost"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000"
                    android:fontFamily="sans-serif"
                    android:padding="2dp"
                    android:layout_below="@+id/txtProduct2"
                    android:text="Tsh 200,000"
                    android:paddingBottom="4dp"
                    android:textSize="16sp" />
                <TextView
                    android:id="@+id/txtOff2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/textCost"
                    android:textColor="@color/colorAccent"
                    android:layout_marginTop="2dp"
                    android:visibility="visible"
                    android:fontFamily="sans-serif"
                    android:padding="2dp"
                    android:text="Tsh 200,000"
                    android:textSize="14sp"/>
              </RelativeLayout>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
              <LinearLayout
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="vertical">
                <android.support.v7.widget.RecyclerView
                    android:id="@+id/recyclerView"
                    android:nestedScrollingEnabled="false"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clipToPadding="true"
                    android:padding="5dp">
                </android.support.v7.widget.RecyclerView>
              </LinearLayout>
            </LinearLayout>
          </LinearLayout>
        </LinearLayout>
      </LinearLayout>
    </TableLayout>
  </android.support.v4.widget.NestedScrollView>
  <android.support.v7.widget.Toolbar
      android:id="@+id/toolBar"
      android:layout_width="match_parent"
      android:layout_height="?attr/actionBarSize"
      android:title="Safari Booking Tanzania"
      app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
  </android.support.v7.widget.Toolbar>
  <!--bottom sheet container-->
  <RelativeLayout
      android:id="@+id/bottomButtons"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:padding="5dp"
      android:background="@android:color/white"
      android:layout_gravity="bottom">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="visible"
        android:layout_centerHorizontal="true">
      <Button
          android:id="@+id/btnAddCart"
          android:layout_width="0dp"
          android:minHeight="45dp"
          android:layout_weight="0.5"
          android:layout_height="wrap_content"
          android:text="@string/add_to_cart"
          android:textAllCaps="false"
          android:background="@drawable/btnflat"
          style="@style/Base.TextAppearance.AppCompat.Button"
          android:textColor="@color/colorAccent"
          />
      <Button
          android:id="@+id/btnBuy"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:minHeight="45dp"
          android:layout_weight="0.5"
          android:text="@string/title_buynow"
          android:textAllCaps="false"
          android:background="@color/colorAccent"
          style="@style/Base.TextAppearance.AppCompat.Button"
          android:textColor="@android:color/white"
          />
    </LinearLayout>
  </RelativeLayout>
  <android.support.design.widget.FloatingActionButton
      android:id="@+id/fabWhatsapp"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_gravity="bottom|right"
      app:fabSize="normal"
      app:backgroundTint="#40C351"
      app:srcCompat="@drawable/ic_icons8_whatsapp"
      android:layout_marginBottom="60dp"
      android:layout_marginRight="@dimen/fab_margin"/>
  <android.support.design.widget.FloatingActionButton
      android:id="@+id/fabcomment"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_gravity="bottom|right"
      app:fabSize="mini"
      app:backgroundTint="@color/colorAccent"
      app:srcCompat="@drawable/ic_rate_review_color_24dp"
      android:layout_marginBottom="130dp"
      android:layout_marginRight="25dp"/>
  <android.support.design.widget.FloatingActionButton
      android:id="@+id/fab"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_gravity="bottom|right"
      app:fabSize="normal"
      app:backgroundTint="@color/colorAccent"
      app:srcCompat="@drawable/ic_phone_white"
      android:layout_marginBottom="60dp"
      android:layout_marginRight="@dimen/fab_margin"/>
</android.support.design.widget.CoordinatorLayout>