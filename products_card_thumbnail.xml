<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/cardView">
  <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal"
      android:focusable="true"
      android:background="?android:attr/selectableItemBackground">
    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="230dp"
        android:padding="4dp"
        android:scaleType="centerCrop"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />
    <RelativeLayout
        android:id="@+id/linearlayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:padding="7dp"
        android:layout_below="@+id/imageView2"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/favContainer"
        android:orientation="vertical">
      <TextView
          android:id="@+id/txtProduct"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_alignParentStart="true"
          android:fontFamily="sans-serif"
          android:padding="2dp"
          android:layout_toStartOf="@+id/btnMore"
          android:text="SUMSUNG GALAYX 5 3MP CAMERA 3D"
          android:ellipsize="end"
          android:maxLines="2"
          android:textSize="15sp" />
      <TextView
          android:id="@+id/textCost"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_below="@+id/txtProduct"
          android:textColor="#000"
          android:fontFamily="sans-serif"
          android:padding="2dp"
          android:text="Tsh 200,000 | Ofa. Bado siku 40"
          android:paddingBottom="4dp"
          android:textSize="16sp" />
      <TextView
          android:id="@+id/txtOff"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_alignParentLeft="true"
          android:layout_alignParentStart="true"
          android:layout_below="@+id/textCost"
          android:textColor="@color/colorAccent"
          android:layout_marginTop="2dp"
          android:fontFamily="sans-serif"
          android:padding="2dp"
          android:text="Tsh 200,000"
          android:textSize="14sp" />
      <ImageButton
          android:id="@+id/btnMore"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:src="@drawable/ic_more_vert_black_24dp"
          android:layout_alignParentEnd="true"
          android:background="@android:color/transparent"/>
    </RelativeLayout>
    <TextView
        android:id="@+id/lblOff"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:text="-14%"
        android:padding="3dp"
        android:gravity="center"
        android:layout_margin="5dp"
        android:background="@color/colorAccent"
        android:textColor="@android:color/white"/>

  </RelativeLayout>
</android.support.v7.widget.CardView>
