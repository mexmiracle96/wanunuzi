<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
  <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_margin="7dp"
      android:focusable="true"
      android:background="?android:attr/selectableItemBackground">
    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:padding="10dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:scaleType="fitCenter"/>
    <RelativeLayout
        android:id="@+id/linearlayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="4dp"
        android:layout_below="@+id/imageView2">
      <TextView
          android:id="@+id/txtProduct"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_alignParentStart="true"
          android:fontFamily="sans-serif"
          android:padding="2dp"
          android:maxLines="2"
          android:layout_toStartOf="@+id/btnMore"
          android:text="Sangsung Eclipse Get Now On Our Store for cheap prices 3D"
          android:ellipsize="end"
          android:textSize="15sp" />
      <TextView
          android:id="@+id/textCost"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_below="@+id/txtProduct"
          android:textColor="#000"
          android:fontFamily="sans-serif"
          android:padding="2dp"
          android:text="Tsh 200,000"
          android:paddingBottom="4dp"
          android:textSize="16sp" />
      <TextView
          android:id="@+id/txtOff"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_alignParentLeft="true"
          android:layout_alignParentStart="true"
          android:layout_below="@+id/textCost"
          android:textColor="@color/colorAccent"
          android:layout_marginTop="2dp"
          android:fontFamily="sans-serif"
          android:padding="2dp"
          android:text="Tsh 200,000"
          android:textSize="14sp" />
      <ImageButton
          android:id="@+id/btnMore"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:padding="2dp"
          android:src="@drawable/ic_more_vert_black_24dp"
          android:layout_alignParentEnd="true"
          android:background="@android:color/transparent"/>
    </RelativeLayout>
    <TextView
        android:id="@+id/lblOff"
        android:layout_width="39dp"
        android:layout_height="wrap_content"
        android:text="-14%"
        android:padding="2dp"
        android:layout_margin="5dp"
        android:background="@color/colorAccent"
        android:textColor="@android:color/white"/>
  </RelativeLayout>
</LinearLayout>
