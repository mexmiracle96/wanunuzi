<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    app:cardUseCompatPadding="true"
    android:layout_height="wrap_content"
    android:background="@android:color/white">
  <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:focusable="true"
      android:layout_margin="5dp"
      android:background="?android:attr/selectableItemBackground"
      android:orientation="horizontal">
    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="230dp"
        android:padding="4dp"
        android:layout_centerHorizontal="true"
        android:scaleType="fitXY"
        android:transitionName="imgTransition"
        />
    <RelativeLayout
        android:id="@+id/linearlayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:padding="4dp"
        android:layout_below="@+id/imageView2"
        android:layout_alignParentStart="true"
        android:orientation="vertical">
      <TextView
          android:id="@+id/txtProduct"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_alignParentStart="true"
          android:fontFamily="sans-serif"
          android:ellipsize="end"
          android:maxLines="2"
                    android:layout_toStartOf="@+id/btnMore"

          android:padding="2dp"
          android:text="SUMSUNG GALAYX 5 3MP CAMERA 3D"
          android:textSize="15sp" />
      <TextView
          android:id="@+id/txtPrice"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_alignParentLeft="true"
          android:layout_alignParentStart="true"
          android:layout_below="@+id/txtProduct"
          android:fontFamily="sans-serif"
          android:textColor="#000"
          android:transitionName="priceTransition"
          android:text="Tsh 200,000"
          android:padding="2dp"
          android:textSize="15sp" />
      <TextView
          android:id="@+id/txtOff"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_alignParentLeft="true"
          android:layout_alignParentStart="true"
          android:layout_below="@+id/txtPrice"
          android:textColor="@color/colorAccent"
          android:visibility="visible"
          android:fontFamily="sans-serif"
          android:text="Tsh 200,000"
          android:padding="2dp"
          android:textSize="14sp" />
          <ImageButton
          android:id="@+id/btnMore"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:src="@drawable/ic_more_vert_black_24dp"
          android:layout_alignParentEnd="true"
          android:background="@android:color/transparent"/>

    </RelativeLayout>
      <TextView
        android:id="@+id/lblOff"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:text="-14%"
        android:padding="3dp"
        android:gravity="center"
        android:layout_margin="5dp"
        android:background="@color/colorAccent"
        android:textColor="@android:color/white"/>
  </RelativeLayout>
</LinearLayout>
