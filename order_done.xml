<?xml version="1.0" encoding="utf-8"?>
<LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f4f4f4"
    android:orientation="vertical">

  <ScrollView
      android:layout_width="match_parent"
      android:layout_height="wrap_content">
    <LinearLayout
        android:id="@+id/relatilayout1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:orientation="vertical">
      <android.support.v7.widget.CardView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          app:cardElevation="10dp"
          android:layout_margin="5dp">
        <RelativeLayout
            android:id="@+id/ln2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorGreen">
          <TextView
              android:id="@+id/txtv1"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_centerInParent="true"
              android:layout_margin="10dp"
              android:fontFamily="sans-serif-condensed"
              android:padding="3dp"
              android:text="@string/order_completed"
              android:textColor="@android:color/white"
              android:textSize="19sp"
              android:textStyle="bold" />
        </RelativeLayout>
      </android.support.v7.widget.CardView>
      <android.support.v7.widget.CardView
          android:id="@+id/card1"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_margin="5dp"
          android:layout_below="@+id/ln2">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
          <TextView
              android:id="@+id/txtv2"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginTop="10dp"
              android:fontFamily="sans-serif"
              android:padding="10sp"
              android:text="@string/title_allpayment_mustbe_made"
              android:textSize="16sp" />
          <TextView
              android:id="@+id/txtv3"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_below="@+id/txtv2"
              android:fontFamily="sans-serif"
              android:padding="10sp"
              android:text="@string/note"
              android:textSize="16sp" />
        </RelativeLayout>
      </android.support.v7.widget.CardView>
      <RelativeLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent">
        <android.support.v7.widget.CardView
            android:id="@+id/card2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="10dp"
            android:layout_margin="5dp">
          <TextView
              android:id="@+id/txtv2"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:fontFamily="sans-serif"
              android:padding="10dp"
              android:background="@drawable/gradient_accent"
              android:textColor="@android:color/white"
              android:text="@string/title_payment_number_name"
              android:textSize="18sp" />
        </android.support.v7.widget.CardView>
        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:layout_margin="5dp"
            android:layout_below="@+id/card2"/>
      </RelativeLayout>
      <android.support.v7.widget.CardView
          android:id="@+id/card2"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          app:cardElevation="10dp"
          android:layout_margin="5dp">
        <TextView
            android:id="@+id/txtv2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:padding="10dp"
            android:background="@drawable/gradient_accent"
            android:textColor="@android:color/white"
            android:text="@string/title_how_to_get_product"
            android:textSize="18sp" />
      </android.support.v7.widget.CardView>
      <android.support.v7.widget.CardView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_below="@+id/card1">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp">
          <TextView
              android:id="@+id/txtDecription"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_below="@+id/txtView1"
              android:layout_margin="6dp"
              android:fontFamily="sans-serif"
              android:lineSpacingMultiplier="1.2"
              android:padding="10dp"
              android:text="@string/how_to_get_your_product"
              android:textSize="16sp" />
        </RelativeLayout>
      </android.support.v7.widget.CardView>
      <android.support.v7.widget.CardView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_margin="5dp"
          app:cardElevation="10dp"
          android:layout_below="@+id/card1">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_below="@+id/txtView1"
              android:background="@drawable/gradient_accent"
              android:orientation="vertical">

            <TextView
                style="@style/TextAppearance.AppCompat.Widget.ActionMode.Title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:padding="10dp"
                android:text="@string/title_faq_info"
                android:textColor="@android:color/white" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal">

              <Button
                  android:id="@+id/btnfaq"
                  style="@style/Base.Widget.AppCompat.Button"
                  android:layout_width="120dp"
                  android:layout_height="wrap_content"
                  android:layout_margin="15dp"
                  android:background="@drawable/btn_round"
                  android:ellipsize="end"
                  android:maxLength="7"
                  android:minHeight="35dp"
                  android:padding="10dp"
                  android:text="@string/title_faq"
                  android:textColor="@android:color/white"
                  android:textSize="12sp" />

              <Button
                  android:id="@+id/btnInfo"
                  style="@style/Base.Widget.AppCompat.Button"
                  android:layout_width="130dp"
                  android:layout_height="wrap_content"
                  android:layout_margin="15dp"
                  android:background="@drawable/btn_round"
                  android:minHeight="35dp"
                  android:padding="10dp"
                  android:text="@string/title_info"
                  android:textColor="@android:color/white"
                  android:textSize="12sp" />
            </LinearLayout>
          </LinearLayout>

        </RelativeLayout>
      </android.support.v7.widget.CardView>
      <android.support.v7.widget.CardView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_margin="5dp"
          app:cardElevation="5dp"
          android:layout_below="@+id/card1">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

          <TextView
              android:id="@+id/txtView1"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_alignParentTop="true"
              android:layout_centerInParent="true"
              android:background="@color/colorAccent"
              android:layout_marginTop="5dp"
              android:fontFamily="sans-serif-condensed"
              android:padding="10dp"
              android:text="@string/title_working_hours"
              android:textColor="@android:color/white"
              android:textSize="19sp"
              android:textStyle="bold" />
        </RelativeLayout>
      </android.support.v7.widget.CardView>
      <TextView
          android:id="@+id/txtDecription"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_below="@+id/txtView1"
          android:layout_margin="5dp"
          android:fontFamily="sans-serif"
          android:lineSpacingMultiplier="1.2"
          android:padding="10dp"
          android:text="@string/working_hours"
          android:textSize="16sp" />
      <android.support.v7.widget.CardView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_margin="5dp"
          app:cardElevation="10dp"
          android:layout_below="@+id/card1">

        <TextView
            android:id="@+id/txtView1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerInParent="true"
            android:background="@color/colorAccent"
            android:fontFamily="sans-serif-condensed"
            android:padding="10dp"
            android:text="@string/title_where_to_get_mypurchases"
            android:textColor="@android:color/white"
            android:textSize="19sp"
            android:textStyle="bold" />
      </android.support.v7.widget.CardView>
      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_below="@+id/txtView1"
          android:layout_margin="6dp"
          android:fontFamily="sans-serif"
          android:lineSpacingMultiplier="1.2"
          android:padding="10dp"
          android:text="@string/all_purchases_information"
          android:textSize="16sp" />
      <android.support.v7.widget.CardView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_margin="5dp"
          app:cardElevation="10dp"
          android:layout_below="@+id/card1">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_below="@+id/txtView1"
              android:background="@color/colorGreen"
              android:orientation="vertical">

            <TextView
                style="@style/TextAppearance.AppCompat.Widget.ActionMode.Title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:padding="10dp"
                android:text="@string/title_learn_how_make_payment"
                android:textColor="@android:color/white" />

            <Button
                android:id="@+id/btnReadMore"
                style="@style/Base.Widget.AppCompat.Button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:background="@drawable/btn_round3"
                android:ellipsize="end"
                android:minHeight="35dp"
                android:padding="10dp"
                android:text="@string/title_read_more"
                android:layout_gravity="center"
                android:textColor="@android:color/white"
                android:textSize="12sp" />
          </LinearLayout>
        </RelativeLayout>
      </android.support.v7.widget.CardView>
      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="vertical">
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            app:cardElevation="10dp"
            android:layout_marginBottom="20dp">
          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">
            <RelativeLayout
                android:id="@+id/ln2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:background="@color/colorGreen">
              <TextView
                  android:id="@+id/txtv1"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_centerInParent="true"
                  android:fontFamily="sans-serif-condensed"
                  android:gravity="center"
                  android:padding="5dp"
                  android:textStyle="bold"
                  android:text="@string/supported_payment_options"
                  android:textColor="@android:color/white"
                  android:textSize="19sp" />
            </RelativeLayout>
            <LinearLayout
                android:id="@+id/layout1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="@dimen/card_margin"
                android:orientation="horizontal">
              <LinearLayout
                  android:layout_width="100dp"
                  android:layout_height="wrap_content"
                  android:orientation="vertical">
                <Refractored.Controls.CircleImageView
                    android:id="@+id/mpesa"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_gravity="center"
                    android:textColor="@android:color/white"
                    android:textSize="17sp" />
              </LinearLayout>
              <LinearLayout
                  android:layout_width="100dp"
                  android:layout_height="wrap_content"
                  android:orientation="vertical">
                <Refractored.Controls.CircleImageView
                    android:id="@+id/tigopesa"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_gravity="center"
                    android:textColor="@android:color/white"
                    android:textSize="17sp" />
              </LinearLayout>
              <LinearLayout
                  android:layout_width="100dp"
                  android:layout_height="wrap_content"
                  android:orientation="vertical">
                <Refractored.Controls.CircleImageView
                    android:id="@+id/halopesa"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_gravity="center"
                    android:textColor="@android:color/white"
                    android:textSize="17sp" />
              </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/layout2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/layout1"
                android:layout_gravity="center"
                android:paddingBottom="20dp"
                android:layout_margin="@dimen/card_margin"
                android:orientation="horizontal">
              <LinearLayout
                  android:layout_width="100dp"
                  android:layout_height="wrap_content"
                  android:orientation="vertical">
                <Refractored.Controls.CircleImageView
                    android:id="@+id/airtelmoney"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_gravity="center"
                    android:textColor="@android:color/white"
                    android:textSize="17sp" />
              </LinearLayout>
              <LinearLayout
                  android:layout_width="100dp"
                  android:layout_height="wrap_content"
                  android:orientation="vertical">
                <Refractored.Controls.CircleImageView
                    android:id="@+id/zantel"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_gravity="center"
                    android:textColor="@android:color/white"
                    android:textSize="17sp" />
              </LinearLayout>
              <LinearLayout
                  android:layout_width="100dp"
                  android:layout_height="wrap_content"
                  android:orientation="vertical">
                <Refractored.Controls.CircleImageView
                    android:id="@+id/tpesa"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_gravity="center"
                    android:textColor="@android:color/white"
                    android:textSize="17sp" />
              </LinearLayout>
            </LinearLayout>
          </LinearLayout>
        </android.support.v7.widget.CardView>
      </LinearLayout>
      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_below="@+id/txtView1"
          android:layout_gravity="center"
          android:fontFamily="sans-serif"
          android:lineSpacingMultiplier="1.2"
          android:padding="10dp"
          android:text="Safari Platforms"
          android:textSize="18sp" />
    </LinearLayout>
  </ScrollView>
</LinearLayout>
