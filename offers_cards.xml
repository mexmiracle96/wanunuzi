<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/cardView">
  <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal"
      android:focusable="true"
      android:background="?android:attr/selectableItemBackground">
    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="230dp"
        android:padding="4dp"
        android:layout_centerHorizontal="true"
        android:scaleType="centerCrop"
        android:transitionName="imgTransition"
            />
    <RelativeLayout
        android:id="@+id/linearlayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:padding="4dp"
        android:layout_below="@+id/imageView2"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/favContainer"
        android:orientation="vertical">
      <TextView
          android:id="@+id/txtProduct"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_alignParentStart="true"
          android:layout_marginTop="6dp"
          android:fontFamily="sans-serif"
          android:padding="5dp"
          android:ellipsize="end"
          android:maxLines="2"
          android:text="SUMSUNG GALAYX 5 3MP CAMERA 3D"
          android:textColor="#000"
          android:textSize="13sp" />
      <TextView
          android:id="@+id/textCost"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_below="@+id/txtProduct"
          android:layout_marginLeft="2dp"
          android:textColor="#0066cc"
          android:fontFamily="sans-serif"
          android:paddingLeft="5dp"
          android:layout_marginTop="7dp"
          android:transitionName="priceTransition"
          android:text="200,000,00"
          android:paddingBottom="4dp"
          android:textSize="14sp" />
      <TextView
          android:id="@+id/txtOff"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_below="@+id/txtProduct"
          android:layout_marginLeft="2dp"
          android:layout_toEndOf="@id/textCost"
          android:textColor="@color/colorAccent"
          android:layout_marginTop="7dp"
          android:fontFamily="sans-serif"
          android:paddingLeft="5dp"
          android:text="Tsh 200,000"
          android:textSize="13sp"/>
      <Button
          android:id="@+id/btnBuy"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:minHeight="35dp"
          android:text="Buy Now"
          android:layout_marginTop="15dp"
          android:layout_marginLeft="5dp"
          android:layout_marginBottom="5dp"
          android:background="@color/colorBlueDark"
          android:textColor="@android:color/white"
          android:layout_below="@id/txtOff"/>
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/favContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="1dp"
        android:layout_margin="5dp"
        android:layout_below="@+id/imageView2"
        android:layout_alignParentEnd="true"
        android:orientation="vertical">
    </LinearLayout>
  </RelativeLayout>
</android.support.v7.widget.CardView>
